// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Accounts {
  account_id Int @id @default(autoincrement())
  email String @unique
  hashed_password String
  is_active Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  profile Profiles?
}

model Profiles {
  // ProfilesのアカウントIDとAccountsのアカウントIDを一対一の関係にした
  account_id Int @id @unique
  account Accounts @relation(fields: [account_id], references: [account_id])
  profile_id String @unique @default(uuid())
  name String @default("名無しさん")
  self_pr String?
  icon String @default("https://icooon-mono.com/i/icon_14440/icon_144400.svg")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Followers {
  follow_id Int
  follower_id Int
  created_at DateTime @default(now())
  @@id([follow_id, follower_id])
}

model Posts {
  post_id Int @id @default(autoincrement())
  account_id Int
  content String
  created_at DateTime @default(now())
}

model Likes {
  account_id Int
  post_id Int
  created_at DateTime @default(now())
  @@id([account_id, post_id])
}

model Comments {
  comment_id Int @id @default(autoincrement())
  account_id Int
  post_id Int
  content String
  created_at DateTime @default(now())
}
